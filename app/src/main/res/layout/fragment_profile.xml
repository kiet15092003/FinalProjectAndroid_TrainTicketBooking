<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment"
    android:gravity="center"
    android:background="@drawable/login"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_gravity=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/iv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            app:civ_circle_background_color="#CCCCCC"
            app:civ_border_overlay="true" />
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="20dp"
            android:elevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_imgSrc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email" />
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@+id/iv_imgSrc2"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tv_emailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@+id/iv_imgSrc2"
                    android:layout_below="@+id/tv_email"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="20dp"
            android:elevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_imgSrc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone" />
                <TextView
                    android:id="@+id/tv_phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tt_phone"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@+id/iv_imgSrc"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tv_phoneNumberValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@+id/iv_imgSrc"
                    android:layout_below="@+id/tv_phoneNumber"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_editPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="20dp"
            android:elevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_imgSrc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock" />
                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tt_pass"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@+id/iv_imgSrc3"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tv_passwordValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@+id/iv_imgSrc3"
                    android:layout_below="@+id/tv_password"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_editPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/Widget.MaterialComponents.Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeWidth="2dp"
            app:cornerRadius="20dp"
            android:text="@string/Logout"
            android:textColor="@color/white"
            app:strokeColor="@color/orangeLess"
            />
    </LinearLayout>

</FrameLayout>